               </items></Menu>
          <Menu mnemonicParsing="false" text="View">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#onViewRefreshClick" text="Refresh" />
               </items>
            </Menu>
          <Menu fx:id="menuItemUserGuide" mnemonicParsing="true" text="Help">
            <items>
              <MenuItem mnemonicParsing="true" onAction="#onHelpUserGuideClick" text="User Guide" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Settings">
              <items>
                  <MenuItem mnemonicParsing="false" onAction="#onMenuItemSettingClick" text="Set Save Location..." />
              </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
